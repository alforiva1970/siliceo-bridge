{
  "manifest_version": 3,
  "name": "Siliceo Bridge",
  "version": "0.1.0",
  "description": "Ponte tra Siliceo e piattaforme AI cloud (Claude, Gemini, ecc.)",
  "permissions": ["storage", "tabs"],
  "host_permissions": [
    "https://claude.ai/*",
    "https://gemini.google.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://claude.ai/*"],
      "js": ["content-script-claude.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Siliceo Bridge"
  }
}

{
  "manifest_version": 3,
  "name": "Siliceo Bridge",
  "version": "1.1.0",
  "description": "Ponte tra Siliceo e piattaforme AI cloud (Claude, ChatGPT, Gemini, ecc.)",
  "permissions": [
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://claude.ai/*",
    "https://chat.openai.com/*",
    "https://chatgpt.com/*",
    "https://gemini.google.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://claude.ai/*"
      ],
      "js": [
        "content-script-claude.js"
      ],
      "run_at": "document_end"
    },
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*"
      ],
      "js": [
        "content-script-chatgpt.js"
      ],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Apri Siliceo Bridge"
  }
}